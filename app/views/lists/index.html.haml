-# .container.text-center
%h1.header-title.mountain Lists
%section.container
  = link_to 'New List', new_list_path

%section.container
  .row
    .col-12
      = link_to '+', new_task_path, class: 'add-link'
      %ul
        - @orphanTasks.each do |task|
          %li= task.text
- @lists.each do |list|
  .container.text-center
    %h3.flashy= list.title
  %section.container
    .row
      .col-12
        = link_to '+', new_task_path(list: list), class: 'add-link'
        %ul
          - list.tasks.each do |task|
            %li= task.text
